@{
    ViewData["Title"] = "Movie List";
}
@model List<ApplicationResponse>

<table class="table table-bordered table-striped">
    @* creates table headers *@
    <thead class="font-weight-bold">
        <tr>
            <td>Category</td>
            <td>Movie Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Movie Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thead>

    @* creates body of table with each row from database. *@
    <tbody>
        @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Category.CategoryName</td>
                    <td>@x.MovieTitle</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>

                    <td><a asp-controller="Home" asp-action="Edit" asp-route-applicationid="@x.MovieID">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="Delete" asp-route-applicationid="@x.MovieID">Delete</a></td>
                </tr>
            }
    </tbody>
</table>